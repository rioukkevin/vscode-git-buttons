{
    "name": "vscode-git-buttons",
    "displayName": "VSCode Git Buttons",
    "description": "Add git push/pull buttons",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "rioukkevin",
    "license": "MIT",
    "homepage": "https://kevin.riou.pro",
    "bugs": {
        "url": "https://github.com/rioukkevin/vscode-git-buttons/issues"
    },
    "icon": "assets/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/rioukkevin/vscode-git-buttons"
    },
    "keywords": [
        "git",
        "commit",
        "vscode",
        "push",
        "pull"
    ],
    "categories": [
        "Other"
    ],
    "main": "./out/index.js",
    "activationEvents": [
        "onCommand:git.pull",
        "onCommand:git.push"
	],
    "contributes": {
		"commands": [
			{
				"command": "git.pull",
                "title": "Git pull",
                "icon": {
                    "dark": "assets/pull_black.svg",
                    "light": "assets/pull_light.svg"
                }
            },
            {
				"command": "git.push",
                "title": "Git push",
                "icon": {
                    "dark": "assets/push_black.svg",
                    "light": "assets/push_light.svg"
                }
			}
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "git.pull",
                    "group": "navigation",
                    "when": "scmProvider == git"
                },
                {
                    "command": "git.push",
                    "group": "navigation",
                    "when": "scmProvider == git"
                }
            ]
        },
        "keybindings": [
            {
                "command": "gitButtons.myPush",
                "key": "ctrl+alt+up",
                "mac": "shift+cmd+up"
            },
            {
                "command": "gitButtons.myPull",
                "key": "ctrl+alt+down",
                "mac": "shift+cmd+down"
            }
        ]
	},
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts --fix",
        "watch": "tsc -watch -p ./",
        "build": "vsce package",
        "local-install":"code --install-extension vscode-git-buttons-0.0.1.vsix",
        "pretest": "npm run compile && npm run lint"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
